<view class="main">
				<view class="left" style="background-color: #f6f6f7;">
								<view class="left-block" wx:for="{{depList}}" wx:key="index" style="background-color: {{depChoice[index] ? '#fff' : '#f6f6f7'}};color: {{depChoice[index] ? '#006eff' : '#333'}};" data-index="{{index}}" bindtap="depChange">
												{{item.name}}
								</view>
								<view style="width: 1px;height: 40px;"></view>
				</view>
				<view wx:if="{{docList.length == 0}}" class="not">
								<image mode="aspectFit" src="../../../image/not.png"></image>
								<text>数据为空</text>
				</view>
				<view class="right" wx:else>
								<view class="right-block" wx:for="{{docList}}" wx:key="index" data-id="{{item.id}}" data-name="{{item.userName}}" bindtap="go">
												<image mode="aspectFill" src="../../../image/dr.png" class="doc-avatar"></image>
												<view class="doc-info">
																<view class="doc-name">{{item.userName}}</view>
																<view class="doc-title">{{item.title}}</view>
												</view>
								</view>
				</view>
</view>