/* pages/appointment/doctorInfo/doctorInfo.wxss */
.doc-block{
	width: 95%;
	margin: 10px auto;
	border-radius: 5px;
	border: 1px solid #eee;
	display: flex;
	flex-wrap: wrap;
	padding: 10px 10px 0 10px;
	box-sizing: border-box;
	padding-top: 15px;
}
.doc-block image{
	width: 48px;
	height: 48px;
	border-radius: 5px;
	background-color: #e6f1ff;
	margin-right: 15px;
	border: 1px solid #eee;
	margin-left: 10px;
}
.doc-block .doc{
	width: calc(100% - 81px);
	display: block;
}
.doc-block .doc .name{
	font-size: 17px;
	color: #333;
}
.doc-block .doc  .pos{
	font-size: 13px;
	color: #555;
	font-weight: 300;
	margin-top: 8px;
	display: block;
	background: #eafbf2;
    color: #2ED477;
    width: 90px;
    text-align: center;
    border-radius: 10px;
    line-height: 20px;
}
.doc-block .brief{
	margin-top: 8px;
	font-size: 12px;
	color: #7f7f7f;
	overflow: hidden;
	display: block;
	width: 100%;
	line-height: 22px;
	padding: 0 10px;
	margin-top: 15px;
	margin-bottom: 10px;
}
.title{
	font-weight: 500;
	font-size: 15px;
	color: #333;
	display: block;
	width: 100%;
	padding-left: 15px;
	margin: 20px 0;
}
.doctor-list-box{
	width: 90%;
	margin: 5px auto;
	padding: 10px;
	box-sizing: border-box;
	border-radius: 3px;
	border: 1px solid #eee;
}

.tui-doc-block{
	width: 95%;
	margin: 10px auto;
	border-radius: 5px;
	border: 1px solid #eee;
	display: flex;
	flex-wrap: wrap;
	padding: 10px 10px 0 10px;
	box-sizing: border-box;
	padding-top: 15px;
	padding-bottom: 15px;
}
.tui-doc-block image{
	width: 48px;
	height: 48px;
	border-radius: 5px;
	background-color: #e6f1ff;
	margin-right: 15px;
	border: 1px solid #eee;
}
.tui-doc-block .doc{
	width: calc(100% - 71px);
}
.tui-doc-block .doc .name{
	font-size: 17px;
	color: #333;
}
.tui-doc-block .doc .name .pos{
	font-size: 13px;
	color: #555;
	font-weight: 300;
	margin-left: 10px;
}
.tui-doc-block .brief{
	margin-top: 8px;
	font-size: 13px;
	color: #7f7f7f;
	overflow: hidden;
    -webkit-line-clamp: 1;
    text-overflow: ellipsis;
    display: -webkit-box;
	-webkit-box-orient: vertical;
	font-weight: 300;
}
.hod{
	display: block;
	font-size: 15px;
	color: #333;
	width: 100%;
	margin: 8px 0 10px 0px;
	font-weight: 200;
}
.date-scroll-container {
	display: flex;
  width: 100%;
  height: 100%;
	overflow-x: auto;
	white-space: nowrap;
	margin-bottom: 15px;
	padding-bottom: 5px;

}

.time-list {
	display: inline-block;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	width: 80px;
	height: 80px;
	margin-right: 10px;
	border-radius: 8px;
	padding: 10px;
	box-sizing: border-box;
	transition: all 0.3s ease;
	text-align: center;
}

.time-date {
	font-size: 14px;
	font-weight: 500;
	text-align: center;
}

.cont{
	display: inline-block;
	margin-left: 0px;
	color: #7f7f7f;
	font-size: 13px;
	font-weight: 300;
	margin-top: 5px;
}

.duan{
	margin-left: 10px;
}

.price{
	margin-left: 10px;
	color: red;
}

/* 排班部分样式 */
.schedule {
	margin-top: 10px;
	padding: 10px;
	background-color: #f8f8f8;
	border-radius: 6px;
	margin-left: 10px;
	width: calc(100% - 20px);
}

.schedule-content {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.schedule-info {
	display: flex;
	align-items: center;
	flex: 1;
}

/* 排班类型样式 */
.slot-type {
	padding: 4px 8px;
	border-radius: 4px;
	margin-right: 12px;
}

.slot-type text {
	font-size: 12px;
	font-weight: 500;
}

/* 时间段样式 */
.slot-period {
	font-size: 14px;
	color: #333;
	margin-right: 12px;
	min-width: 30px;
}

/* 号源信息样式 */
.slot-number {
	font-size: 13px;
	color: #666;
	margin-right: 12px;
}

/* 费用样式 */
.slot-fee {
	font-size: 14px;
	color: #ff4d4f;
	font-weight: 500;
}

/* 状态样式 */
.slot-status {
	padding: 4px 10px;
	border-radius: 4px;
}

.status-available {
	background-color: #f0f9ff;
	color: #1890ff;
	font-size: 12px;
}

.status-full {
	background-color: #fff2f0;
	color: #ff4d4f;
	font-size: 12px;
}

.status-unavailable {
	background-color: #f5f5f5;
	color: #999;
	font-size: 12px;
}
.not{
	width: 100%;
	height: 200px;
	margin-top: 10px;
	position: relative;
} 
.not image{
	width: 100%;
}
.not text{
	font-size: 15px;
	color: #ccc;
	display: block;
	width: 100%;
	text-align: center;position: absolute;
	top: 18px;
}
