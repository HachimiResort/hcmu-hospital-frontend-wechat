<import src="../../../component/appToast/appToast.wxml"/>
<template is="toast" data="{{ ..._toast_ }}"/>
<view class="main">
	<view class="info-container">
		<view class="info-title">预约信息：
			<view class="info-item">
				<text class="info-label">预约编号：</text>
				<text class="info-value appointment-no">{{item.appointmentNo}}</text>
			</view>
			<view class="info-item">
				<text class="info-label">状态：</text>
				<text class="info-value" wx:if="{{item.status === 1}}" style="color: #ff9800;">待支付</text>
				<text class="info-value" wx:elif="{{item.status === 2}}" style="color: #2196f3;">已预约</text>
				<text class="info-value" wx:elif="{{item.status === 3}}" style="color: #4caf50;">已签到</text>
				<text class="info-value" wx:elif="{{item.status === 4}}" style="color: #9e9e9e;">已就诊</text>
				<text class="info-value" wx:elif="{{item.status === 5}}" style="color: #607d8b;">已取消</text>
				<text class="info-value" wx:elif="{{item.status === 6}}" style="color: #f44336;">爽约</text>
				<text class="info-value" wx:else style="color: #f44336;">看见这个信息请联系管理员</text>
			</view>
		</view>
		<view class="info-title">患者信息：
			<view class="info-item">
				<text class="info-label">患者姓名：</text>
				<text class="info-value">{{item.patientName}}</text>
			</view>
		</view>
		<view class="info-title">医生信息：
			<view class="info-item">
				<text class="info-label">暂无:</text>
				<text class="info-value">暂无</text>
			</view>
		</view>
		<view class="info-title">排班信息：
			<view class="info-item">
				<text class="info-label">排班编号：</text>
				<text class="info-value">{{item.scheduleId}}</text>
			</view>
			<view class="info-item" wx:if="{{item.status === 3}}">
				<text class="info-label">排队顺序号：</text>
				<text class="info-value">{{item.visitNo}}</text>
			</view>
		</view>
		
		<view class="info-title">费用信息：
			<view class="info-item">
				<text class="info-label">原始费用：</text>
				<text class="info-value">¥{{item.originalFee}}</text>
			</view>
			<view class="info-item">
				<text class="info-label">实际费用：</text>
				<text class="info-value">¥{{item.actualFee}}</text>
			</view>
			<view class="info-item" wx:if="{{item.status !== 1 && item.status !== 5}}">
				<text class="info-label">支付时间：</text>
				<text class="info-value">{{item.paymentTime}}</text>
			</view>
		</view>
		<view class="info-title" wx:if="{{item.status === 5}}">取消信息：
			<view class="info-item">
				<text class="info-label">取消时间：</text>
				<text class="info-value">{{item.cancellationTime}}</text>
			</view>
			<view class="info-item">
				<text class="info-label">取消原因：</text>
				<text class="info-value">{{item.cancellationReason}}</text>
			</view>
		</view>
		<view class="info-title">其他信息：
			<view class="info-item">
				<text class="info-label">创建时间：</text>
				<text class="info-value">{{item.createTime}}</text>
			</view>
		</view>
		
		
	</view>
	<view class="button" wx:if="{{item.status === 1}}" bindtap="pay">支付</view>
	<view class="button" wx:if="{{item.status === 1 || item.status === 2}}" bindtap="cancel">取消</view>
</view>