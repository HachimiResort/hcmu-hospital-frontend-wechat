/* pages/make/details.wxss */
.main{
	background-color: #fdfdff;
	width: 100%;
	min-height: 100vh;
	padding-bottom: 60px;
}

/* 信息容器样式 */
.info-container {
	width: 89%;
	margin: 15px auto;
	background-color: #fff;
	border-radius: 8px;
	box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
	padding: 0;
	overflow: hidden;
}

/* 信息标题样式 */
.info-title {
	font-size: 16px;
	font-weight: 500;
	color: #333;
	padding: 15px 15px 10px 15px;
	background-color: #f8f9fa;
	border-bottom: 1px solid #e9ecef;
	margin: 0;
}

/* 信息项样式 */
.info-item {
	padding: 12px 15px;
	display: flex;
	justify-content: space-between;
	align-items: center;
	border-bottom: 1px solid #f0f0f0;
}

/* 最后一个信息项无边框 */
.info-item:last-child {
	border-bottom: none;
}

/* 标签样式 */
.info-label {
	font-size: 14px;
	color: #666;
	min-width: 80px;
	flex-shrink: 0;
}

/* 值样式 */
.info-value {
	font-size: 14px;
	color: #333;
	flex: 1;
	text-align: right;
	word-break: normal;
	word-wrap: break-word;
	padding-left: 10px;
	white-space: nowrap;
	max-height: none;
	overflow: visible;
}

/* 预约编号特殊处理 */
.appointment-no {
	word-break: break-all;
	word-wrap: break-word;
	white-space: normal;
	line-height: 1.5;
	font-size: 13px;
}

/* 按钮样式 */
.button {
	width: 88%;
	margin: 25px auto;
	height: 45px;
	line-height: 45px;
	text-align: center;
	color: #006EFF;
	background-color: #e4efff;
	border-radius: 6px;
	font-size: 16px;
	font-weight: 500;
	transition: all 0.3s ease;
	box-shadow: 0 2px 4px rgba(0, 110, 255, 0.1);
}

/* 按钮点击效果 */
.button:active {
	background-color: #d0e6ff;
	transform: translateY(1px);
	box-shadow: 0 1px 2px rgba(0, 110, 255, 0.1);
}

/* 状态颜色样式 */
.status-pending {
	color: #ff9800 !important;
}

.status-booked {
	color: #2196f3 !important;
}

.status-checked-in {
	color: #4caf50 !important;
}

.status-visited {
	color: #9e9e9e !important;
}

.status-cancelled {
	color: #607d8b !important;
}

.status-missed {
	color: #f44336 !important;
}

/* 特殊状态文本样式 */
.status-error {
	color: #f44336 !important;
	font-weight: 500;
}

/* 响应式调整 */
@media screen and (min-width: 768px) {
	.info-container {
		width: 70%;
	}
	
	.button {
		width: 70%;
	}
}