/* 全局样式重置和基础设置 */
.content {
  padding-bottom: 100rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* 头像部分样式 */
.head {
  width: 100%;
  height: 180rpx;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.head image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 3rpx solid #e0e0e0;
  transition: all 0.3s ease;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* 表单标签样式 */
.hr {
  color: #666;
  margin-left: 40rpx;
  font-size: 28rpx;
  display: block;
  margin-top: 25rpx;
  margin-bottom: 10rpx;
  font-weight: 500;
}

/* 表单容器样式 */
.form-section {
  background-color: #fff;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  margin-left: 30rpx;
  margin-right: 30rpx;
  overflow: hidden;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #2c3e50;
  padding: 30rpx 40rpx 25rpx;
  margin-bottom: 25rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%);
  position: relative;
  display: inline-block;
  width: 100%;
  box-sizing: border-box;
  letter-spacing: 1rpx;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 40rpx;
  width: 80rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #3478f7 0%, #4da8ff 100%);
  border-radius: 2rpx;
}

/* 输入框样式 */
.input-field {
  width: 90%;
  background-color: #fff;
  border: none;
  border-bottom: 1px solid #e0e0e0;
  height: 80rpx;
  padding: 0 15px;
  font-size: 15px;
  margin: 0 auto 20rpx auto;
  display: block;
  color: #333;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

/* 只读状态样式 */
.input-field[disabled],
.input-disabled {
  background-color: #f5f5f5 !important;
  color: #666 !important;
  border-bottom: 1px dashed #ccc !important;
  font-style: normal;
  opacity: 0.9;
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.05);
}

/* 焦点状态样式 */
.input-field:focus {
  border-bottom-color: #3478f7;
  outline: none;
  border-bottom-width: 2px;
  background-color: #fafaff;
}

/* 文本域样式 */
.textarea-field {
  width: 90%;
  height: 150rpx;
  border: 1px solid #e0e0e0;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 15px;
  margin: 0 auto 25rpx auto;
  display: block;
  color: #333;
  resize: none;
  box-sizing: border-box;
  background-color: #fff;
  transition: all 0.3s ease;
  font-family: inherit;
}

.textarea-field:focus {
  border-color: #3478f7;
  outline: none;
  border-width: 1.5px;
  box-shadow: 0 0 0 2px rgba(52, 120, 247, 0.1);
}

/* 按钮样式 */
.button {
  margin-top: 30px;
  height: 50px;
  border-radius: 25px;
  width: 85%;
  margin: 30px auto;
  color: #fff;
  background-color: #3478f7;
  display: block;
  line-height: 50px;
  text-align: center;
  font-size: 16px;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(52, 120, 247, 0.3);
}

.button:active {
  transform: scale(0.98);
  box-shadow: 0 2px 6px rgba(52, 120, 247, 0.3);
}

/* 辅助链接样式 */
.link-group {
  display: flex;
  justify-content: center;
  margin-top: 20px;
  padding-bottom: 30px;
}

.link-item {
  color: #3478f7;
  font-size: 14px;
  margin: 0 20px;
  padding: 5px 10px;
  border-radius: 4px;
  transition: all 0.2s ease;
}

.link-item:active {
  background-color: rgba(52, 120, 247, 0.1);
}

/* 只读文本样式 */
.readonly-text {
  color: #999;
  font-size: 14px;
  padding: 10px 25px;
  background-color: #f9f9f9;
  margin: 5px 25px 15px;
  border-radius: 4px;
  word-break: break-all;
}

/* 分隔线样式 */
.divider {
  height: 10px;
  background-color: #f8f8f8;
  margin: 0 -25px 15px;
}

/* 优化输入框样式 */
.reg input {
  background-color: #fff;
  border-bottom: 1px solid #e0e0e0;
  border-radius: 0;
  height: 45px;
  margin-top: 0;
  margin-bottom: 15px;
  font-size: 15px;
  color: #333;
}

/* 占位符样式 */
input::placeholder,
textarea::placeholder {
  color: #ccc;
  font-size: 14px;
}