<!-- pages/sign/sign.wxml -->
<import src="../../../component/appToast/appToast.wxml"/>
<template is="toast" data="{{ ..._toast_ }}"/>
<view class="content">
				<text class="hr">请填写新的邮箱</text>
				<input model:value="{{email}}" type="email" placeholder="请输入新邮箱" placeholder-style="color:#ccc;font-size:13px;" maxlength="40" />
				<view style="display: flex; margin-top: 20px; align-items: center; width: 658rpx; position: relative; left: 49rpx; top: -14rpx">
								<input model:value="{{code}}" type="number" placeholder="请输入验证码" placeholder-style="color:#ccc;font-size:13px;" maxlength="50" style="flex: 1; margin-right: 10px;" />
								<view class="button" bindtap="register" style="width: 270rpx; display: block; box-sizing: border-box">
												获取验证码
								</view>
				</view>
				<view class="button" style="margin-top: 40px;" bindtap="into">提交修改</view>
</view>