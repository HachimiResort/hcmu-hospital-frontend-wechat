<import src="../../component/appToast/appToast.wxml"/>
<template is="toast" data="{{ ..._toast_ }}"/>
<view class="head">
	<image  bindtap="sign" src="{{isLogin ? '../../image/avatar.png' : '../../image/boy.png'}}" mode="scaleToFill"></image>
	<view class="headRight" bindtap="sign">
		<text class="name">{{isLogin ? info.nickname : '登录/注册'}}</text>
		<!-- <text  bindtap="sign" class="userName" wx:if="isLogin">账号：{{info.userName}}</text> -->
		<text class="userName">{{isLogin ? '账号：'+info.userName : ''}}</text>
		<!-- <text class="userName" wx:if="isLogin">180933567999</text> -->
    <text class="userName">{{isLogin ? '角色：'+info.roleName : ''}}</text>
	</view>
</view>
<view class="main">
	<view class="gotop">
		<view class="list" bindtap="sign">
			<image mode="scaleToFill" class="listLeftImg" src="../../image/admin.png"></image>
			<text>个人信息管理</text>
			<image src="../../image/next.svg" mode="scaleToFill" class="listRightImg"></image>
		</view>
		<view class="list" bindtap="make">
			<image mode="scaleToFill" class="listLeftImg" src="../../image/yugua.png"></image>
			<text>预约挂号记录</text>
			<image src="../../image/next.svg" mode="scaleToFill" class="listRightImg"></image>
		</view>
		<view class="list" bindtap="waitlist">
			<image mode="scaleToFill" class="listLeftImg" src="../../image/my_hover.png"></image>
			<text>预约候补记录</text>
			<image src="../../image/next.svg" mode="scaleToFill" class="listRightImg"></image>
		</view>
		<view class="list" bindtap="feedback">
			<image mode="scaleToFill" class="listLeftImg" src="../../image/fankui.png"></image>
			<text>意见反馈</text>
			<image src="../../image/next.svg" mode="scaleToFill" class="listRightImg"></image>
		</view>
		<view class="list" bindtap="out">
			<image mode="scaleToFill" class="listLeftImg" src="../../image/out.png"></image>
			<text>退出登录</text>
			<image src="../../image/next.svg" mode="scaleToFill" class="listRightImg"></image>
		</view>
	</view>
	<!-- <view style="width: 1;height: 50px; background-color: #f3f8ff;"></view> -->
</view>